<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnSub"
        android:layout_width="56dp"
        android:layout_height="45dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="28dp"
        android:text="-"
        android:tag="sub"
        app:layout_constraintStart_toEndOf="@+id/n6"
        app:layout_constraintTop_toBottomOf="@+id/btnAdd" />

    <Button
        android:id="@+id/btnDiv"
        android:layout_width="56dp"
        android:layout_height="45dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="24dp"
        android:text="/"
        android:tag="div"
        app:layout_constraintStart_toEndOf="@+id/btnEqual"
        app:layout_constraintTop_toBottomOf="@+id/btnMul" />

    <Button
        android:id="@+id/btnMul"
        android:layout_width="56dp"
        android:layout_height="45dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="32dp"
        android:text="*"
        android:tag="mul"
        app:layout_constraintStart_toEndOf="@+id/n9"
        app:layout_constraintTop_toBottomOf="@+id/btnSub" />

    <Button
        android:id="@+id/n9"
        android:layout_width="56dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="9"
        android:tag="9"
        app:layout_constraintStart_toEndOf="@+id/n8"
        app:layout_constraintTop_toBottomOf="@+id/n6" />

    <Button
        android:id="@+id/btnEqual"
        android:layout_width="56dp"
        android:layout_height="45dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="24dp"
        android:text="="
        android:tag="equal"
        app:layout_constraintStart_toEndOf="@+id/n0"
        app:layout_constraintTop_toBottomOf="@+id/n9" />

    <Button
        android:id="@+id/n0"
        android:layout_width="56dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:text="0"
        android:tag="0"
        app:layout_constraintTop_toBottomOf="@+id/n7"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/n6"
        android:layout_width="56dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:text="6"
        android:tag="6"
        app:layout_constraintStart_toEndOf="@+id/n5"
        app:layout_constraintTop_toBottomOf="@+id/n3" />

    <TextView
        android:id="@+id/calculatorNumberTitle"
        android:layout_width="357dp"
        android:layout_height="46dp"
        android:text="숫자계산기"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/n1"
        android:layout_width="57dp"
        android:layout_height="46dp"
        android:layout_marginTop="20dp"
        android:text="1"
        android:tag="1"
        app:layout_constraintTop_toBottomOf="@+id/calculatorNumberTitle"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/n2"
        android:layout_width="55dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="2"
        android:tag="2"
        app:layout_constraintStart_toEndOf="@+id/n1"
        app:layout_constraintTop_toBottomOf="@+id/calculatorNumberTitle" />

    <Button
        android:id="@+id/n8"
        android:layout_width="56dp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        android:text="8"
        android:tag="8"
        app:layout_constraintStart_toEndOf="@+id/n7"
        app:layout_constraintTop_toBottomOf="@+id/n5" />

    <Button
        android:id="@+id/n7"
        android:layout_width="56dp"
        android:layout_height="45dp"
        android:layout_marginTop="36dp"
        android:text="7"
        android:tag="7"
        app:layout_constraintTop_toBottomOf="@+id/n4"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="56dp"
        android:layout_height="45dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:text="+"
        android:tag="add"
        app:layout_constraintStart_toEndOf="@+id/n3"
        app:layout_constraintTop_toBottomOf="@+id/calculatorNumberTitle" />

    <Button
        android:id="@+id/n5"
        android:layout_width="56dp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:text="5"
        android:tag="5"
        app:layout_constraintStart_toEndOf="@+id/n4"
        app:layout_constraintTop_toBottomOf="@+id/n2" />

    <Button
        android:id="@+id/n4"
        android:layout_width="56dp"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:text="4"
        android:tag="4"
        app:layout_constraintTop_toBottomOf="@+id/n1"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/n3"
        android:layout_width="56dp"
        android:layout_height="45dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:text="3"
        android:tag="3"
        app:layout_constraintStart_toEndOf="@+id/n2"
        app:layout_constraintTop_toBottomOf="@+id/calculatorNumberTitle" />

    <EditText
        android:id="@+id/textCalcResult"
        android:layout_width="wrap_content"
        android:layout_height="66dp"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:hint="결과값"
        android:inputType="number"
        android:text="0"
        app:layout_constraintTop_toBottomOf="@+id/n0"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/btnCancle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:text="C"
        app:layout_constraintStart_toEndOf="@+id/btnEqual"
        app:layout_constraintTop_toBottomOf="@+id/btnDiv" />
</android.support.constraint.ConstraintLayout>