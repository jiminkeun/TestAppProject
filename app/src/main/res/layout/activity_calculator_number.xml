<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textCalcResult"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="#000000"
        android:ems="8"
        android:hint="결과값"
        android:inputType="number"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="16dp"
        />

    <TableLayout
        android:id="@+id/tableCalcArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:background="#000000"
        android:layout_alignLeft="@+id/textCalcResult"
        android:layout_alignStart="@+id/textCalcResult"
        android:layout_alignRight="@+id/textCalcResult"
        android:layout_alignEnd="@+id/textCalcResult"
        android:layout_below="@+id/textCalcResult">

        <TableRow android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:background="#FFFFFF">

            <Button
                android:id="@+id/n1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#F44336"
                android:text="1"
                android:tag="1"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textAlignment="center"
                android:layout_margin="2dp"/>

            <Button
                android:id="@+id/n2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#F44336"
                android:text="2"
                android:tag="2"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textAlignment="center"
                android:layout_margin="2dp"/>

            <Button
                android:id="@+id/n3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#F44336"
                android:text="3"
                android:tag="3"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textAlignment="center"
                android:layout_margin="2dp"/>

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#4545FF"
                android:text="+"
                android:tag="add"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textAlignment="center"
                android:layout_margin="2dp"/>
        </TableRow>

        <TableRow android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF">

            <Button
                android:id="@+id/n4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#F44336"
                android:text="4"
                android:tag="4"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textAlignment="center"
                android:layout_margin="2dp"/>

            <Button
                android:id="@+id/n5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#F44336"
                android:text="5"
                android:tag="5"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textAlignment="center"
                android:layout_margin="2dp"/>

            <Button
                android:id="@+id/n6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#F44336"
                android:text="6"
                android:tag="6"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textAlignment="center"
                android:layout_margin="2dp"/>

            <Button
                android:id="@+id/btnSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#4545FF"
                android:text="-"
                android:tag="sub"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textAlignment="center"
                android:layout_margin="2dp"/>

        </TableRow>

        <TableRow android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF">

            <Button
                android:id="@+id/n7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#F44336"
                android:text="7"
                android:tag="7"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textAlignment="center"
                android:layout_margin="2dp"/>

            <Button
                android:id="@+id/n8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#F44336"
                android:text="8"
                android:tag="8"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textAlignment="center"
                android:layout_margin="2dp"/>

            <Button
                android:id="@+id/n9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#F44336"
                android:text="9"
                android:tag="9"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textAlignment="center"
                android:layout_margin="2dp"/>

            <Button
                android:id="@+id/btnMul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#4545FF"
                android:text="*"
                android:tag="mul"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textAlignment="center"
                android:layout_margin="2dp"/>
        </TableRow>

        <TableRow android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF">

            <Button
                android:id="@+id/n0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#F44336"
                android:text="0"
                android:tag="0"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textAlignment="center"
                android:layout_margin="2dp"/>

            <Button
                android:id="@+id/btnCancle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#4545FF"
                android:text="C"
                android:tag="cancle"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textAlignment="center"
                android:layout_margin="2dp"/>

            <Button
                android:id="@+id/btnEqual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#4545FF"
                android:text="="
                android:tag="equal"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textAlignment="center"
                android:layout_margin="2dp"/>

            <Button
                android:id="@+id/btnDiv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#4545FF"
                android:text="/"
                android:tag="div"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textAlignment="center"
                android:layout_margin="2dp"/>
        </TableRow>

    </TableLayout>

</RelativeLayout>