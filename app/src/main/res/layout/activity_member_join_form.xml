<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mytest.syscore.daou.mytest.MemberJoinFormActivity">

    <TextView
        android:id="@+id/titleMemberJoin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="회원정보등록"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:textSize="30dp"
        android:background="#BD8DBD"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/editMemberNo"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="번호입력"
        android:textColorHint="#FF0000"
        android:textSize="20dp"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/textMemberNo"
        app:layout_constraintTop_toTopOf="@+id/textMemberNo"
        />

    <EditText
        android:id="@+id/editMemberBirthday"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="생년월일입력"
        android:textColorHint="#FF0000"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/textMemberBirthday"
        app:layout_constraintTop_toTopOf="@+id/textMemberBirthday" />

    <EditText
        android:id="@+id/editMemberName"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="이름입력"
        android:textColorHint="#FF0000"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/textMemberName"
        app:layout_constraintTop_toTopOf="@+id/textMemberName" />

    <EditText
        android:id="@+id/editMemberAge"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="나이입력"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/textMemberAge"
        app:layout_constraintTop_toTopOf="@+id/textMemberAge" />

    <EditText
        android:id="@+id/editMemberSex"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editMemberNo"
        android:ems="10"
        android:hint="성별입력"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/textMemberSex"
        app:layout_constraintTop_toTopOf="@+id/textMemberSex" />

    <EditText
        android:id="@+id/editMemberAddr"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editMemberNo"
        android:ems="10"
        android:hint="주소입력"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/textMemberAddr"
        app:layout_constraintTop_toTopOf="@+id/textMemberAddr" />

    <EditText
        android:id="@+id/editMemberJob"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editMemberNo"
        android:ems="10"
        android:hint="직업입력"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/textMemberJob"
        app:layout_constraintTop_toTopOf="@+id/textMemberJob" />


    <TextView
        android:id="@+id/textMemberAddr"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="주소"
        android:textAlignment="center"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/textMemberJob" />

    <TextView
        android:id="@+id/textMemberJob"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="text"
        android:text="직업"
        android:textAlignment="center"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/textMemberBirthday" />

    <TextView
        android:id="@+id/textMemberBirthday"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_alignLeft="@+id/editMemberNo"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="생년월일"
        android:textAlignment="center"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/textMemberSex" />

    <TextView
        android:id="@+id/textMemberSex"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="성별"
        android:textAlignment="center"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/textMemberAge" />

    <TextView
        android:id="@+id/textMemberAge"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="나이"
        android:textAlignment="center"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/textMemberName" />

    <TextView
        android:id="@+id/textMemberName"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="이름"
        android:textAlignment="center"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/textMemberNo" />

    <TextView
        android:id="@+id/textMemberNo"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="No."
        android:textAlignment="center"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/titleMemberJoin" />

    <Button
        android:id="@+id/btnMemberInputSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="등록"
        android:textSize="30dp"
        android:textColor="#FFFFFF"
        android:background="#888888"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/editMemberAddr" />

</android.support.constraint.ConstraintLayout>
